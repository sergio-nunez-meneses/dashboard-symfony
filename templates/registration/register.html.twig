{% extends 'base.html.twig' %}



{% block title %}Register{% endblock %}

{% block body %}
<div class="container d-flex flex-column justify-content-center">
    
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    
    {{ form_start(registrationForm) }}
    
    <div class="row w-100 p-5 m-5 d-flex flex-row justify-content-center">
        <div class="text-center col-lg-6 col-sm-12 shadow p-5">
            <h1>Register</h1>
            <div class="d-flex flex-column form-group justify-content-center p-5">
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.confirm_password) }}
            </div>
        
            <div class="form group">
            <button type="submit" class="btn btn-outline-danger">Register</button>
            <a href="{{ path('dashboard') }}"><button type="button" class="btn btn-outline-danger">Annuler</button></a>
            </div>
        </div>
    </div>
    {{ form_end(registrationForm) }}
    
</div>
{% endblock %}



    
        

