{% include 'header.html.twig' %}

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-1">
      <a class="navbar-brand" href="{{ path('dashboard') }}">
        <button class="btn btn-lg bg-dark text-white" type="button">Home</button>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="navbarNav" class="collapse navbar-collapse">
        {% if not app.user %}
          {# GRAPH #}
          {% if current_page != 'graph' %}
          <ul class="navbar-nav ml-auto">
            <li class="nav-items">
              <a class="nav-link btn btn-lg bg-dark text-white" href="{{ path('admin/graph') }}">
                Sign Up
              </a>
            </li>
          </ul>
          {% endif %}
          {# SIGN UP FORM #}
          {% if current_page != 'register' %}
          <ul class="navbar-nav ml-auto">
            <li class="nav-items">
              <a class="nav-link btn btn-lg bg-dark text-white" href="{{ path('app_register') }}">
                Sign Up
              </a>
            </li>
          </ul>
          {% endif %}

          {# SING IN FORM #}
          {% if current_page != 'login' %}
          <ul class="navbar-nav">
            <li class="nav-items">
              <a class="nav-link btn btn-lg bg-dark text-white" href="{{ path('app_login') }}">
                Sign In
              </a>
            </li>
          </ul>
          {% endif %}
        {% endif %}

        {# ADMIN/USER #}
        {% if app.user %}
          {% for role in app.user.roles %}
            {% if role == 'ROLE_USER' %}
              <ul class="navbar-nav">
                <li class="nav-items">
                  <a class="nav-link d-inline btn btn-lg bg-dark font-italic text-white" href="{{ path('index') }}">
                    Produits
                  </a>
                </li>
              </ul>
            {% endif %}
            {% if role == 'ROLE_ADMIN' %}
              <ul class="navbar-nav">
                <li class="nav-items">
                  <a class="nav-link d-inline btn btn-lg bg-dark font-italic text-white" href="{{ path('admin_users') }}">
                    Users
                  </a>
                </li>
              </ul>
            {% endif %}
          {% endfor %}
        {% endif %}

        {# LOGOUT #}
        {% if app.user %}
          <ul class="navbar-nav ml-auto">
            <li class="nav-items">
              <a class="nav-link d-inline btn btn-lg bg-dark font-italic text-white" href="{{ path('index') }}">
                Welcome: {{ app.user.username }}
              </a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-items">
              <a class="nav-link btn btn-lg bg-dark text-white" href="{{ path('app_logout') }}">Logout</a>
            </li>
          </ul>
        {% endif %}
      </div>
    </nav>
  </header>

{% block body %} {% endblock %}
{% include 'footer.html.twig' %}
