{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

{% for product in products %}
    <p>{{product.name}}</p>
    <p>{{product.reference}}</p>
    <p>{{product.category}}</p>
    <p>{{product.purchase_date | date('d/m/Y')}}</p>
    <p>{{product.warranty_date | date('d/m/Y')}}</p>
    <p>{{product.price}}</p>
    <p>{{product.receipt}}</p>
    <p>{{product.maintenance}}</p>
    <p>{{product.manual}}</p>
    <p>{{product.reservation_date | date('d/m/Y')}}</p>
    <p>{{product.return_date | date('d/m/Y')}}</p>
    {% if product.availability == 1 %}
    <p>{{product.purchase_place}}</p>
    <p>__________________________________</p>

        
    {% endif %}
  {% endfor %}

{% endblock %}
